{
  "app-id": "net.sf.nootka",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.12",
  "sdk": "org.kde.Sdk",
  "command": "nootka",

  "rename-appdata-file": "nootka.appdata.xml",
  "rename-desktop-file": "nootka.desktop",
  "rename-icon": "nootka",

  "finish-args":[
      "--device=dri",
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--share=network",
      "--filesystem=home",
      "--socket=pulseaudio"
  ],

  "modules": [
    {
      "name": "fftw",
      "rm-configure": true,
      "config-opts": [
        "--enable-shared", "--enable-float"
      ],
      "cleanup": [
          "/bin",
          "/share/info",
          "/include",
          "/share/man",
          "/lib/cmake",
          "/lib/debug",
          "/lib/pkgconfig",
          "*.a",
          "*.la"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://www.fftw.org/fftw-3.3.7.tar.gz",
          "sha256": "3b609b7feba5230e8f6dd8d245ddbefac324c5a6ae4186947670d9ac2cd25573"
        },
        {
          "type": "script",
          "commands": [
            "autoreconf -fiv"
          ],
          "dest-filename": "autogen.sh"
        }
      ]
    },

    {
      "name": "soundtouch",
      "config-opts": [
        "--enable-shared", "--disable-static"
      ],
      "sources": [
        {
            "type": "archive",
            "url": "http://www.surina.net/soundtouch/soundtouch-2.0.0.tar.gz",
            "sha256": "d224f7d1421b5f8e74a74c85741345bd9802618a40ae30ce5b427a5705c89d25"
        }
      ],
      "cleanup": [
          "/bin",
          "/include",
          "/lib/pkgconfig",
          "/lib/debug",
          "/share/aclocal",
          "/share/doc"
      ]
    },

    {
      "name": "nootka",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
          "-DFFTW3_INCLUDE_DIRS=/app/include",
          "-DFFTW3_LIBRARIES=/app/lib/libfftw3f.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://sourceforge.net/projects/nootka/files/Nootka-1.4.6/nootka-1.4.6-source.tar.bz2",
          "sha256": "26b94b90065d11a47c9f6d091ebc2c1c449f4ef26202d203045199900b2e3514"
        }
      ],
      "post-install": [
          "ln -s /app/share/nootka/lang /app/share/nootka/translations"
      ],
      "cleanup": [
          "/share/doc",
          "/share/man",
          "/lib/debug",
          "/share/pixmaps"
      ]
    }
  ]
}
